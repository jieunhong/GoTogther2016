<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/travel_info_list"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/travel_info_day"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#daff33"
        android:layout_above="@+id/travel_delete"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/travel_info_name"
        android:textSize="30dp"
        android:text="예제 텍스트입니다"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="일차 일정입니다"
        android:id="@+id/travel_info_day"
        android:layout_below="@+id/travel_info_name"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="여행하기"
        android:id="@+id/travel_travel"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="삭제하기"
        android:id="@+id/travel_delete"
        android:layout_above="@+id/travel_travel"
        android:layout_alignLeft="@+id/travel_travel"
        android:layout_alignStart="@+id/travel_travel" />

    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="수정하기"
        android:id="@+id/travel_edit"
        android:layout_alignTop="@+id/travel_delete"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="뒤로가기"
        android:id="@+id/back_travel_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />
</RelativeLayout>